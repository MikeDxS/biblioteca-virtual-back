{
    "env": {
        "es6": true,
        "node": true
    },
    "settings": {
        "import/resolver":{
            "node": {
                "extensions": [".js", ".ts"]
            }
        }
    },
    "extends": [
        "airbnb-base",
        "plugin:@typescript-eslint/recommended"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "arrow-parens": "off",
        "linebreak-style" : "off",
        "spaced-comment": "off",
        "no-throw-literal": "off",
        "@typescript-eslint/no-inferrable-types": "off",
        "@typescript-eslint/interface-name-prefix": "off",
        "import/extensions": "off",
        "no-console": "off",
        "no-underscore-dangle": "off"
    }
}